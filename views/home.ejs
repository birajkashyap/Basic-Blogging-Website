<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/style.css">
  <title>Blog Home</title>
</head>
<body>
  <h1>Home Page</h1>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <a href="/edit/<%= post.id %>"><button>Edit</button></a>
        <a href="/delete/<%= post.id %>"><button>Delete</button></a>
      </li>
    <% }) %>
  </ul>
  <a href="/create"><strong> Create a new post</strong></a>
</body>
</html>
